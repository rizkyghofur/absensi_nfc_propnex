{
  "name": "propnex-nfc-attendance",
  "productName": "PropNex NFC Attendance System",
  "version": "1.0.3",
  "description": "PropNex NFC Attendance System",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:mac": "electron-builder --mac dmg",
    "build:win": "electron-builder --win nsis",
    "build:all": "electron-builder --mac dmg --win nsis",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "nfc",
    "acr122u",
    "attendance",
    "electron"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "nfc-pcsc": "^0.8.1",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "electron": "^40.6.1",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.propnex.nfc.attendance",
    "productName": "PropNex NFC Attendance System",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "icon": "assets/icon.icns",
      "category": "public.app-category.business"
    },
    "win": {
      "icon": "assets/icon.ico"
    },
    "linux": {
      "icon": "assets/icon.png"
    }
  }
}
